@model IEnumerable<API_WEB_CLIENT.Models.Usuario>

<h2>Usuarios</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>Rol</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.Nombre</td>
                    <td>@usuario.Email</td>
                    <td>@(usuario.Rol != null ? usuario.Rol.Nombre : "Sin rol")</td>
                    <td>
                        <a href="@Url.Action("Edit", "Usuario", new { id = usuario.id_Usuario })">Editar</a> |
                        <a href="@Url.Action("Delete", "Usuario", new { id = usuario.id_Usuario })">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay usuarios disponibles.</p>
}
