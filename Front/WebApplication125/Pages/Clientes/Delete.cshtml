@page "{id:int}"
@model WEB.Pages.Clientes.DeleteModel
@{
    ViewData["Title"] = "Eliminar Cliente";
}

<div class="container mt-4">
    <div class="card border-danger shadow">
        <div class="card-header bg-danger text-white">
            <h3><i class="fas fa-user-times me-2"></i>@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            @if (Model.ApiError != null)
            {
                <div class="alert alert-danger">@Model.ApiError</div>
            }

            <h5 class="text-danger">¿Está seguro de eliminar este cliente?</h5>

            <dl class="row mt-3">
                <dt class="col-sm-4">Nombre:</dt>
                <dd class="col-sm-8">@Model.Cliente.Nombre</dd>

                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Model.Cliente.Email</dd>

                <dt class="col-sm-4">Presupuesto:</dt>
                <dd class="col-sm-8">@Model.Cliente.Presupuesto.ToString("C")</dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Cliente.id_Cliente" />
                <div class="d-flex justify-content-between mt-4">
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-1"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-1"></i> Confirmar Eliminación
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>