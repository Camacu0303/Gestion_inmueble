@page "{id:int}"
@model WEB.Pages.Clientes.EditModel
@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="container mt-4">
    <div class="card shadow border-warning">
        <div class="card-header bg-warning text-white">
            <h3><i class="fas fa-user-edit me-2"></i>@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            @if (Model.ApiError != null)
            {
                <div class="alert alert-danger">@Model.ApiError</div>
            }

            <form method="post">
                <input type="hidden" asp-for="Cliente.id_Cliente" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Cliente.Nombre" class="form-label"></label>
                        <input asp-for="Cliente.Nombre" class="form-control" />
                        <span asp-validation-for="Cliente.Nombre" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Cliente.Email" class="form-label"></label>
                        <input asp-for="Cliente.Email" class="form-control" type="email" />
                        <span asp-validation-for="Cliente.Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Cliente.Telefono" class="form-label"></label>
                        <input asp-for="Cliente.Telefono" class="form-control" />
                        <span asp-validation-for="Cliente.Telefono" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Cliente.Presupuesto" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Cliente.Presupuesto" class="form-control" />
                        </div>
                        <span asp-validation-for="Cliente.Presupuesto" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-1"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Registrar Cliente
                    </button>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Volver
                    </a>
                    <button type="submit" class="btn btn-warning text-white">
                        <i class="fas fa-save me-1"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>