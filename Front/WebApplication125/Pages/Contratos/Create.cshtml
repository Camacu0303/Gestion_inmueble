@page
@model WEB.Pages.Contratos.CreateModel
@{
    ViewData["Title"] = "Nuevo Contrato";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3><i class="fas fa-file-signature me-2"></i>@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Propiedad</label>
                        <select asp-for="Contrato.id_Propiedad" asp-items="Model.Propiedades" class="form-select" required>
                            <option value="">Seleccionar...</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Cliente</label>
                        <select asp-for="Contrato.id_Cliente" asp-items="Model.Clientes" class="form-select" required>
                            <option value="">Seleccionar...</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="Contrato.Fecha" class="form-label"></label>
                        <input asp-for="Contrato.Fecha" class="form-control" type="date" required />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Contrato.Monto" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Contrato.Monto" class="form-control" type="number" step="0.01" required />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Contrato.Duracion" class="form-label">Duración (meses)</label>
                        <input asp-for="Contrato.Duracion" class="form-control" type="number" required />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Estado</label>
                    <select asp-for="Contrato.id_Estado" asp-items="Model.EstadosContrato" class="form-select" required>
                        <option value="">Seleccionar...</option>
                    </select>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-1"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Registrar Contrato
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>