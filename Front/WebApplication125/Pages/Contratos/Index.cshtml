@page
@model WEB.Pages.Contratos.IndexModel
@{
    ViewData["Title"] = "Listado de Contratos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-file-contract me-2"></i>@ViewData["Title"]</h2>
        <a asp-page="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Nuevo Contrato
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            @if (Model.Contratos.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Propiedad</th>
                                <th>Cliente</th>
                                <th>Tipo</th>
                                <th>Fecha Inicio</th>
                                <th>Fecha Fin</th>
                                <th>Monto</th>
                                <th>Estado</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var contrato in Model.Contratos)
                            {
                                <tr>
                                    <td>@contrato.PropiedadNombre</td>
                                    <td>@contrato.ClienteNombre</td>
                                    <td>@contrato.Tipo</td>
                                    <td>@contrato.FechaInicio.ToShortDateString()</td>
                                    <td>@contrato.FechaFin.ToShortDateString()</td>
                                    <td>@contrato.Monto.ToString("C")</td>
                                    <td>@contrato.EstadoNombre</td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-page="./Edit" asp-route-id="@contrato.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <form method="post" asp-page-handler="Delete" asp-route-id="@contrato.Id"
                                                  onsubmit="return confirm('¿Está seguro que desea eliminar este contrato?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash-alt"></i> Eliminar
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    No se encontraron contratos registrados.
                </div>
            }
        </div>
    </div>
</div>