@page
@model WEB.Pages.Agentes.CreateModel
@{
    ViewData["Title"] = "Registrar Nuevo Agente";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-user-plus me-2"></i>@ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <form method="post" id="agenteForm">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Agente.id_Usuario" class="form-label">ID Usuario</label>
                        <input asp-for="Agente.id_Usuario" class="form-control" />
                        <span asp-validation-for="Agente.id_Usuario" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Agente.Telefono" class="form-label">Teléfono</label>
                        <input asp-for="Agente.Telefono" class="form-control" />
                        <span asp-validation-for="Agente.Telefono" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Agente.Experiencia" class="form-label">Experiencia (años)</label>
                    <input asp-for="Agente.Experiencia" class="form-control" />
                    <span asp-validation-for="Agente.Experiencia" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-page="Index" class="btn btn-outline-secondary me-md-2">
                        <i class="fas fa-arrow-left me-1"></i> Volver
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Crear Agente
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('agenteForm');

            if (form) {
                form.addEventListener('submit', function(e) {
                    if (!this.checkValidity()) {
                        e.preventDefault();
                        e.stopPropagation();
                    }

                    this.classList.add('was-validated');
                });
            } else {
                console.error('Formulario no encontrado');
            }
        });
    </script>
}