@page
@model IndexModel
@{
    ViewData["Title"] = "Gestión contratos";
}

<div class="container-fluid">
    <div class="row">
        <!-- Barra lateral -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="Index">Ver Estado de contratos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="AddContractState">Añadir estado de contrato</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="AddContract">Añadir contrato</a>
                    </li>
                </ul>
            </div>
        </nav>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <h2 class="mt-3">Datos de la API</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.EstadoContratos.Count == 0)
                    {
                        <tr><td colspan="3">Cargando datos...</td></tr>
                    }
                    else
                    {
                        @foreach (var EstadoContrato in Model.EstadoContratos)
                        {
                            <tr>
                                <td>@EstadoContrato.id_Estado</td>
                                <td>@EstadoContrato.Nombre</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </main>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}