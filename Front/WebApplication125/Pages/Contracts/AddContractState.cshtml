@page
@using WEB.Pages.Contracts
@model AddContractStateModel
@{
    ViewData["Title"] = "Añadir nuevo estado de contrato";
}

<div class="container-fluid">
    <div class="row">
        <!-- Barra lateral -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="Index">Ver Estado de contratos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="AddContractState">Añadir estado de contrato</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="AddContract">Añadir contrato</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="col-md-4">
            <form method="post">
                <h4>Crear nuevo estado de contrato.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="NuevoEstadoContrato.Nombre"></label>
                    <input asp-for="NuevoEstadoContrato.Nombre" class="form-control" />
                    <span asp-validation-for="NuevoEstadoContrato.Nombre" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Registrar</button>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}