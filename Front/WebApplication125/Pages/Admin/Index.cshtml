    <script>
        $(document).ready(function() {
            var table = new DataTable('#entityTable', {
                paging: true, 
                ordering: true, 
                searching: true, 
                lengthMenu: [5, 10, 15, 20], 
                language: {
                    search: "Filtrar entidades: ",
                    lengthMenu: "Mostrar _MENU_ ",
                    info: "Mostrando _START_ a _END_ de _TOTAL_ entidades ", 
                    paginate: {
                        previous: "Anterior",
                        next: "Siguiente"
                    }
                },
                scrollY: '400px', 
                scrollCollapse: true
            });
        });
    </script>
    <style>
        td {
