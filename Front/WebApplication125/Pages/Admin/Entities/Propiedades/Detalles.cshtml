@page
@model WEB.Pages.Admin.Entities.Propiedades.DetallesModel
@{
    ViewData["Title"] = "Detalle Propiedad";
    <div class="container mt-5">
        @if (Model.Propiedad != null)
        {
            <div class="row">
                <!-- Imagen de la propiedad -->
                <div class="col-md-8">
                    <img src="@(Model.Propiedad.imagen_url)"
                         class="img-fluid rounded shadow-sm"
                         alt="@Model.Propiedad.nombre"
                         style="width: 100%; height: 100%; max-height: 500px; object-fit: cover;" />
                </div>

                <!-- Información de la propiedad -->
                <div class="col-md-4 d-flex flex-column justify-content-between">
                    <div class="mb-4">
                        <h2 class="fw-bold">@Model.Propiedad.nombre</h2>

                        <p class="mb-2">
                            <i class="fas fa-align-left me-2"></i>
                            <strong>Descripción:</strong><br />
                            @Model.Propiedad.detalles
                        </p>

                        <p class="mb-2">
                            <i class="fas fa-check-circle me-2"></i>
                            <strong>Ubicación:</strong> @Model.Propiedad.direccion
                        </p>

                        <p class="mb-2">
                            <i class="fas fa-check-circle me-2"></i>
                            <strong>Precio:</strong> @Model.Propiedad.precio
                        </p>

                        <p class="mb-2">
                            <i class="fas fa-check-circle me-2"></i>
                            <strong>Estado:</strong> @Model.Propiedad.EstadoPropiedad?.Nombre
                        </p>

                        <p class="mb-2">
                            <i class="fas fa-building me-2"></i>
                            <strong>Tipo:</strong> @Model.Propiedad.TipoPropiedad?.Nombre
                        </p>

                        <p class="mb-2">
                            <i class="fas fa-user me-2"></i>
                            <strong>Agente:</strong> @Model.Propiedad.Usuario?.Nombre
                        </p>
                    </div>

                    <div>
                        <a href="#" class="btn btn-danger w-100 mb-2">
                            <i class="fas fa-calendar-alt me-2"></i> Agendar Visita
                        </a>
                        <a href="/" class="btn btn-secondary w-100">Volver al inicio</a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-danger mt-4">No se encontraron detalles de la propiedad.</div>
        }
    </div>

}