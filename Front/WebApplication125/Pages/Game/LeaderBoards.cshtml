@page
@model HomeModel
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="mt-0 mb-0" style="position: relative; width: 100%; margin: 6px 0;">
    <img src="https://upload.wikimedia.org/wikipedia/commons/5/55/Snake_can_be_completed.gif"
         alt="Culebra"
         style="width: 100%; height: 350px; object-fit: cover;">
    <div class="text-center" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); color: white; background-color: rgba(128, 128, 128, 0.7); padding: 20px; border-radius: 10px;">
        <h1 class="display-4">Snake</h1>
        <p>
            <h1>
                <a class="btn btn-dark" asp-page="Game">
                    <i class="fas fa-play"></i> Jugar
                </a>
            </h1>

        </p>
    </div>
</div>
<div class="container Main">
    <h1>Mejores Puntajes</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Nombre de Usuario</th>
                <th>Puntación</th>
                <th>Duración</th>
                <th>Foto de Usuario</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var score in Model._Scores)
            {
                <tr>
                    <td>@score.Usuario.username</td>
                    <td>@score.eaten</td>
                    <td>@score.duration</td>
                    <td>
                        @if (!string.IsNullOrEmpty(score.Usuario.picture))
                        {
                            <img src="@score.Usuario.picture" alt="User Picture" style="width:150px; height:150px; object-fit:cover;">
                        }
                        else
                        {
                            <p>No image available</p>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    .Main {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }
</style>
