@page
@model WEB.Pages.Propiedades.EditModel
@{
    ViewData["Title"] = "Editar Propiedad";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3><i class="fas fa-edit me-2"></i>@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }

            <form method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="Propiedad.Id" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Propiedad.Nombre" class="form-label"></label>
                        <input asp-for="Propiedad.Nombre" class="form-control" required />
                        <span asp-validation-for="Propiedad.Nombre" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Propiedad.Direccion" class="form-label"></label>
                        <input asp-for="Propiedad.Direccion" class="form-control" required />
                        <span asp-validation-for="Propiedad.Direccion" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="Propiedad.Precio" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Propiedad.Precio" class="form-control" type="number" step="0.01" min="0.01" required />
                        </div>
                        <span asp-validation-for="Propiedad.Precio" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Propiedad.IdTipo" class="form-label">Tipo</label>
                        <select asp-for="Propiedad.IdTipo" asp-items="Model.TiposPropiedad" class="form-select" required>
                            <option value="">Seleccionar...</option>
                        </select>
                        <span asp-validation-for="Propiedad.IdTipo" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Propiedad.IdEstado" class="form-label">Estado</label>
                        <select asp-for="Propiedad.IdEstado" asp-items="Model.EstadosPropiedad" class="form-select" required>
                            <option value="">Seleccionar...</option>
                        </select>
                        <span asp-validation-for="Propiedad.IdEstado" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-1"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Validación del lado del cliente
        (() => {
            'use strict'

            const forms = document.querySelectorAll('.needs-validation')

            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}