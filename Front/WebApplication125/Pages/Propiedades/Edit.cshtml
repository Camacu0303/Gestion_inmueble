@page "{id:int}"
@model WEB.Pages.Propiedades.EditModel
@{
    ViewData["Title"] = "Editar Propiedad";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-white">
            <h3><i class="fas fa-edit me-2"></i>@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            @if (Model.ApiError != null)
            {
                <div class="alert alert-danger">@Model.ApiError</div>
            }

            <form method="post">
                <input type="hidden" asp-for="Propiedad.id_Propiedad" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Propiedad.Nombre" class="form-label"></label>
                        <input asp-for="Propiedad.Nombre" class="form-control" />
                        <span asp-validation-for="Propiedad.Nombre" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Propiedad.Direccion" class="form-label"></label>
                        <input asp-for="Propiedad.Direccion" class="form-control" />
                        <span asp-validation-for="Propiedad.Direccion" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="Propiedad.Precio" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Propiedad.Precio" class="form-control" type="number" step="0.01" />
                        </div>
                        <span asp-validation-for="Propiedad.Precio" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Propiedad.id_Tipo" class="form-label">Tipo</label>
                        <select asp-for="Propiedad.id_Tipo" asp-items="Model.TiposPropiedad" class="form-select">
                            <option value="">Seleccionar...</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Propiedad.id_Estado" class="form-label">Estado</label>
                        <select asp-for="Propiedad.id_Estado" asp-items="Model.EstadosPropiedad" class="form-select">
                            <option value="">Seleccionar...</option>
                        </select>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-warning text-white">
                        <i class="fas fa-save me-1"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}