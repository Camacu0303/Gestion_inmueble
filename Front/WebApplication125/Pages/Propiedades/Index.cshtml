@page
@model WEB.Pages.Propiedades.IndexModel
@{
    ViewData["Title"] = "Propiedades";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-home me-2"></i>Propiedades</h2>
        <a asp-page="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Nueva Propiedad
        </a>
    </div>

    @if (TempData["ApiError"] != null)
    {
        <div class="alert alert-danger">@TempData["ApiError"]</div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Propiedades == null || !Model.Propiedades.Any())
            {
                <div class="alert alert-warning">No hay propiedades registradas</div>
            }
            else
            {
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th>Dirección</th>
                            <th>Precio</th>
                            <th>Estado</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Propiedades)
                        {
                            <tr>
                                <td>@item.Nombre</td>
                                <td>@item.Direccion</td>
                                <td>@item.Precio.ToString("C")</td>
                                <td>
                                    <span class="badge bg-@(item.EstadoPropiedad?.Nombre == "Disponible" ? "success" : "warning")">
                                        @item.EstadoPropiedad?.Nombre
                                    </span>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-page="./Edit" asp-route-id="@item.id_Propiedad" class="btn btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-page="./Details" asp-route-id="@item.id_Propiedad" class="btn btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-page="./Delete" asp-route-id="@item.id_Propiedad" class="btn btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>