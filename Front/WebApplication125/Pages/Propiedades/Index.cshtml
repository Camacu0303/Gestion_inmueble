@page
@model WEB.Pages.Propiedades.IndexModel
@{
    ViewData["Title"] = "Listado de Propiedades";
}

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-home me-2"></i>@ViewData["Title"]</h2>
        <a asp-page="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Nueva Propiedad
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            @if (Model.Propiedades.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Nombre</th>
                                <th>Dirección</th>
                                <th>Precio</th>
                                <th>Tipo</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var propiedad in Model.Propiedades)
                            {
                                <tr>
                                    <td>@propiedad.Nombre</td>
                                    <td>@propiedad.Direccion</td>
                                    <td>@propiedad.Precio.ToString("C")</td>
                                    <td>@propiedad.Tipo</td>
                                    <td>@propiedad.Estado</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-page="./Edit" asp-route-id="@propiedad.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <form method="post" asp-page-handler="Delete"
                                                  asp-route-id="@propiedad.Id"
                                                  class="d-inline"
                                                  onsubmit="return confirmDelete(this);">
                                                <button type="submit"
                                                        class="btn btn-sm btn-outline-danger"
                                                        title="Eliminar">
                                                    <i class="fas fa-trash-alt"></i> Eliminar
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    No se encontraron propiedades registradas.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(form) {
            Swal.fire({
                title: '¿Está seguro?',
                text: "¡No podrá revertir esta acción!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
            return false;
        }
        $(document).ready(function() {
            setTimeout(function() {
                $('.alert').fadeOut('slow', function() {
                    $(this).remove();
                });
            }, 5000);

            if (performance.navigation.type === 2) {
                location.reload(true);
            }
        });
    </script>
}