@using API_WIN_MAIN.Util
@using WEB.Util
@{
    var usuario = SessionUtil.GetUser(Context);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestión de Inmuebles</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/2.2.2/css/dataTables.dataTables.css" />
    <script src="https://cdn.datatables.net/2.2.2/js/dataTables.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <!-- Include FontAwesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        .main-content h2 {
            color: #2c3e50;
            font-weight: 700;
            padding-bottom: 10px;
            border-bottom: 2px solid #f1c40f;
            display: inline-block;
        }

        .features-list {
            list-style-type: none;
            padding-left: 0;
        }

            .features-list li {
                padding: 8px 0;
                padding-left: 30px;
                position: relative;
            }

                .features-list li:before {
                    content: "✓";
                    color: #27ae60;
                    font-weight: bold;
                    position: absolute;
                    left: 0;
                }

        .nav-bg-custom {
            background-color: #White !important;
        }

        .btn-login {
            background-color: #1A3636 !important;
            color: white !important;
        }

        .btn-register {
            background-color: #40534C !important;
            color: white !important;
        }

        @@media (max-width: 768px) {
            .hero-image {
                height: 350px;
            }

            .hero-content {
                padding: 20px;
            }
        }
    </style>
<style>
    /* Make the header sticky */
    header, .navbar {
        background-color: white; /* Ensure the header stays visible */
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Optional: Add a shadow for better visibility */
    }

    .main-content h2 {
        color: #2c3e50;
        font-weight: 700;
        padding-bottom: 10px;
        border-bottom: 2px solid #f1c40f;
        display: inline-block;
    }

    .features-list {
        list-style-type: none;
        padding-left: 0;
    }

    .features-list li {
        padding: 8px 0;
        padding-left: 30px;
        position: relative;
    }

    .features-list li:before {
        content: "✓";
        color: #27ae60;
        font-weight: bold;
        position: absolute;
        left: 0;
    }

    .nav-bg-custom {
        background-color: #White !important;
    }

    .btn-login {
        background-color: #1A3636 !important;
        color: white !important;
    }

    .btn-register {
        background-color: #40534C !important;
        color: white !important;
    }

    @@media (max-width: 768px) {
        .hero-image {
            height: 350px;
        }

        .hero-content {
            padding: 20px;
        }
    }

</style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm nav-bg-custom">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/images/Brand.png" alt="Gestión Inmobiliaria" style="height:auto; width: 300px;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                        @if (usuario != null && usuario.id_Rol == (int) RolEnum.Admin)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Index">
                                    <i class="fas fa-wrench"></i> Mantenimiento
                                </a>
                            </li>
                        }
                    </ul>
                    <div class="d-flex align-items-center">
                        @if (usuario==null)
                        {
                            <a class="btn btn-outline-primary rounded-circle d-flex align-items-center justify-content-center me-2"
                               style="width: 40px; height: 40px;"
                               asp-area="" asp-page="/Auth/Login"
                               title="Iniciar sesión">
                                <i class="fas fa-sign-in-alt"></i>
                            </a>
                        }
                        else
                        {
                            <div class="dropdown">
                                <a class="btn btn-outline-secondary rounded-circle d-flex align-items-center justify-content-center dropdown-toggle"
                                   href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"
                                   style="width: 40px; height: 40px;"
                                   title="Menú de usuario">
                                    <i class="fas fa-user"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li class="dropdown-item-text">
                                        <strong>@usuario.Nombre</strong>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-area="" asp-page="/Auth/Logoff">
                                            <i class="fas fa-sign-out-alt me-2"></i> Cerrar sesión
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3 mb-4">
        @RenderBody()
    </main>

    <footer class="border-top text-muted bg-light mt-5 pt-4">
        <div class="container">
            <div class="row">
                <!-- Columna 1: Empresa -->
                <div class="col-md-3 mb-3">
                    <h5>HomeSpace</h5>
                    <p>Especialistas en la compra, venta y alquiler<br />de propiedades. Te ayudamos a encontrar el<br />  hogar ideal.</p>
                </div>

                <!-- Columna 2: Enlaces rápidos -->
                <div class="col-md-3 mb-3">
                    <h6>Enlaces Rápidos</h6>
                    <ul class="list-unstyled">
                        <li><a href="#">Inicio</a></li>
                        <li><a href="#">Propiedades</a></li>
                        <li><a href="#">Agentes</a></li>
                        <li><a href="#">Blog</a></li>
                    </ul>
                </div>

                <!-- Columna 3: Información Legal -->
                <div class="col-md-3 mb-3">
                    <h6>Legal</h6>
                    <ul class="list-unstyled">
                        <li><a href="#">Términos y Condiciones</a></li>
                        <li><a href="#">Política de Privacidad</a></li>
                        <li><a href="#">Aviso Legal</a></li>
                    </ul>
                </div>

                <!-- Columna 4: Contacto -->
                <div class="col-md-3 mb-3">
                    <h6>Contacto</h6>
                    <ul class="list-unstyled">
                        <li>📍 Dirección: Calle Ficticia 123, Ciudad</li>
                        <li>📞 Teléfono: (123) 456-7890</li>
                        <li>✉️ Email: contacto@homespace.com</li>
                    </ul>
                </div>
            </div>

            <div class="text-center pt-3 border-top mt-4">
                &copy; @DateTime.Now.Year - HomeSpace. Todos los derechos reservados.
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>